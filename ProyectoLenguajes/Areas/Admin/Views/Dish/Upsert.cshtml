@model ProyectoLenguajes.Models.Dish

<div class="container mt-4">
	<form method="post" enctype="multipart/form-data">
		@Html.AntiForgeryToken()

		<input hidden asp-for="Id" />
		<input hidden asp-for="URLImage" />

		<div class="border p-4 rounded bg-light mt-4">
			<div class="row pb-3">
				<h2 class="text-primary">@(Model.Id == 0 ? "Create" : "Edit") Dish</h2>
				<hr />
			</div>

			<div class="mb-3">
				<label for="Name" class="form-label">Dish Name</label>
				<input type="text" name="Name" id="Name" value="@Model.Name" class="form-control bg-white" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label for="Description" class="form-label">Dish Description</label>
				<textarea name="Description" id="Description" class="form-control bg-white" rows="3">@Model.Description</textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Price" class="form-label"></label>
				<input asp-for="Price" type="number" step="0.01" class="form-control bg-white" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="URLImage" class="form-label"></label>
				<input id="uploadBox" name="file" type="file" class="form-control bg-white" accept="image/*" />
				<span asp-validation-for="URLImage" class="text-danger"></span>
			</div>

			<div class="mb-3 form-check">
				<input asp-for="IsActive" type="checkbox" class="form-check-input" style="border: 1px solid black;" />
				<label asp-for="IsActive" class="form-check-label"></label>
			</div>

			<div class="d-flex justify-content-end">
				<a asp-action="Index" class="btn btn-secondary">Back</a>
				<button type="submit" class="btn btn-warning">Save</button>
			</div>

		</div>
	</form>

</div>


@section Scripts {
	<script src="https://cdn.tiny.cloud/1/98dawcdp6hneyx1koa2jleuobrq13l9p9wldcqr2ylrntjxa/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

	<script>
		tinymce.init({
		  selector: '#Description',  // solo el textarea de descripción
		  plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
		  toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
		});
	</script>

	<partial name="_ValidationScriptsPartial" />
}
