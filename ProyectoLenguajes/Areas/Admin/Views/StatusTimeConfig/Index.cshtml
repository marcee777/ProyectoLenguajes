@model IEnumerable<ProyectoLenguajes.Models.StatusTimeConfig>

@{
    ViewData["Title"] = "Status Time Configurations";
}

<h2>Status Time Configurations</h2>

<a asp-action="Upsert" class="btn btn-primary mb-3">+ New Configuration</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Status Name</th>
            <th>Minutes To Next State</th>
            <th>Next Status Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var config in Model)
        {
            <tr>
                <td>@config.StatusName</td>
                <td>@config.MinutesToNextState</td>
                <td>@config.NextStatusName</td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@config.Id" class="btn btn-sm btn-warning">Edit</a>
                    <button class="btn btn-sm btn-danger" onclick="deleteConfig(@config.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function deleteConfig(id) {
            if (confirm('Are you sure you want to delete this configuration?')) {
                fetch('/StatusTimeConfig/Delete/' + id, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }
    </script>
}
