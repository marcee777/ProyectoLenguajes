@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container my-4" style="max-width: 500px;">
    <h3 class="text-center mb-3">Login to Your Account</h3>
    <hr class="mb-3" />

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2 small" role="alert"></div>

        <div class="mb-2">
            <label asp-for="Input.Email" class="form-label small">Email</label>
            <input asp-for="Input.Email" class="form-control form-control-sm border border-warning-subtle bg-light" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Input.Password" class="form-label small">Password</label>
            <input asp-for="Input.Password" class="form-control form-control-sm border border-warning-subtle bg-light" autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Input.RememberMe" class="form-check-input" />
            <label asp-for="Input.RememberMe" class="form-check-label small">Remember me</label>
        </div>

        <div class="d-grid gap-2">
            <button id="login-submit" type="submit" class="btn btn-warning btn-sm">Log In</button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-light btn-sm">Back</a>
        </div>

        <div class="mt-3 small text-center">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
