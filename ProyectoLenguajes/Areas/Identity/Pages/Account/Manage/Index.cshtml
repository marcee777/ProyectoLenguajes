@page
@model IndexModel

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container my-4" style="max-width: 500px;">
    <h3 class="text-center mb-3">@ViewData["Title"]</h3>
    <hr class="mb-3" />

    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2 small" role="alert"></div>

        <div class="mb-2">
            <label asp-for="Username" class="form-label small">Username</label>
            <input asp-for="Username" class="form-control form-control-sm bg-light border border-warning-subtle" disabled />
        </div>

        <div class="mb-2">
            <label asp-for="Input.PhoneNumber" class="form-label small">Phone Number</label>
            <input asp-for="Input.PhoneNumber" class="form-control form-control-sm bg-light border border-warning-subtle" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
        </div>

        <div class="d-grid gap-2 mt-3">
            <button id="update-profile-button" type="submit" class="btn btn-warning btn-sm">Save</button>
            <a asp-page="./Index" class="btn btn-light btn-sm">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
