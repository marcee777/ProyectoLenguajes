@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container my-4" style="max-width: 500px;">
    <h3 class="text-center mb-3">Create a New Account</h3>
    <hr class="mb-3" />

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2 small" role="alert"></div>

        <div class="mb-2">
            <label asp-for="Input.FirstName" class="form-label small">First Name</label>
            <input asp-for="Input.FirstName" class="form-control form-control-sm border border-warning-subtle bg-light" autocomplete="firstname" />
            <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Input.LastName" class="form-label small">Last Name</label>
            <input asp-for="Input.LastName" class="form-control form-control-sm border border-warning-subtle bg-light" autocomplete="lastname" />
            <span asp-validation-for="Input.LastName" class="text-danger small"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Input.Email" class="form-label small">Email</label>
            <input asp-for="Input.Email" class="form-control form-control-sm border border-warning-subtle bg-light" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Input.Password" class="form-label small">Password</label>
            <input asp-for="Input.Password" class="form-control form-control-sm border border-warning-subtle bg-light" autocomplete="new-password" />
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Input.ConfirmPassword" class="form-label small">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control form-control-sm border border-warning-subtle bg-light" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Role" class="form-label small">Role</label>
            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select form-select-sm border border-warning-subtle bg-light"></select>
        </div>

        <div class="d-grid gap-2">
            <button id="registerSubmit" type="submit" class="btn btn-warning btn-sm">Register</button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-light btn-sm">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
