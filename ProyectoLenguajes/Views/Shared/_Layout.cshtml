<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoLenguajes </title>
    <!--CAMBIAR TÍTULO-->

    <!-- Bootstrap y estilos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoLenguajes.styles.css" asp-append-version="true" />

    <!-- Íconos y Toastr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />

    <!-- Estilo para layout de fondo completo y footer fijo -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .custom-orange-navbar {
            background-color: #343a40 !important;
        }

            .custom-orange-navbar .navbar-brand,
            .custom-orange-navbar .nav-link,
            .custom-orange-navbar .navbar-toggler-icon {
                color: white !important;
            }

                .custom-orange-navbar .nav-link:hover {
                    color: #ffd7a0 !important;
                }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light custom-orange-navbar border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hanami</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>                      
                    </ul>

                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>

    <!-- NO usar container aquí para que el fondo se expanda bien -->
    <main role="main" class="p-0 m-0">
        @RenderBody()
    </main>

    <footer class="border-top text-white bg-dark shadow-sm py-3">
        <div class="container text-center">
            &copy; 2025 Hanami. All rights reserved.
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
